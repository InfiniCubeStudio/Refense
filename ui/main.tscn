func _on_button_join_pressed() -> void:
	var ip = \"127.0.0.1\"
	var status = NetworkManager.join_game(ip)
	print(status)
	if status != OK:
		MessageHandler.show_messageBox(\"Failed to connect to server: \\n\"+str(status),\"Ok\",null)
