script/source = "extends Control

func _on_button_play_pressed() -> void:
	# Host locally and auto-join (singleplayer or host multiplayer)
	var net = NetworkManager
	net.host_game()
	net.join_game(\"127.0.0.1\")
	call_deferred(\"_load_level\")

func _on_button_join_pressed() -> void:
	var ip = $IpInput.text
	if ip == \"\":
		ip = \"127.0.0.1\"
	var net = NetworkManager.new()
	add_child(net)
	net.join_game(ip)
	call_deferred(\"_load_level\")

func _load_level():
	get_tree().change_scene_to_file(\"res://maps/level.tscn\")
"

